#include<bits/stdc++.h>
using namespace std;
typedef long long int lli;
int main()
{
	ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
	int t=1,n;
	cin>>n;
	while(n)
	{
		lli i,a[n][3],dp1[n]={},dp2[n]={};
		for(i=0;i<n;i++)
			cin>>a[i][0]>>a[i][1]>>a[i][2];
		dp1[0]=dp2[0]=a[0][1];
		dp1[n-1]=dp2[n-1]=a[n-1][1];
		for(i=n-2;i>0;i--)
		{
			dp1[i]=min(a[i][0],a[i][1]);
			dp2[i]=min(a[i][1],a[i][2]);
		}
		for(i=1;i<n;i++)
		{
			dp1[i]+=dp1[i-1];
			dp2[i]+=dp2[i-1];
		}
		cout<<t<<". "<<min(dp1[n-1],dp2[n-1])<<endl;
		t++;
		cin>>n;
	}
	return 0;
}
